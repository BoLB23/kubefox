  "version": "0.2.0",
  "configurations": [
    {
      "name": "broker",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "components/broker/main.go",
      "args": [
        "-instance=kubefox",
        "-platform=dev",
        "-namespace=kubefox-dev",
        "-grpc-addr=127.0.0.1:6060",
        "-nats-addr=127.0.0.1",
        "-http-addr=false",
        "-https-addr=false",
        "-telemetry-addr=false",
        "-health-addr=false",
        "-log-format=console",
        "-log-level=debug"
      ]
    },
    {
      "name": "operator",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "components/operator/main.go",
      "args": [
        "-instance=kubefox",
        "-namespace=kubefox-system",
        "-vault-url=https://127.0.0.1:8200",
        "-health-addr=0.0.0.0:1111",
        "-log-format=console",
        "-log-level=debug",
        "-leader-elect=false"
      ]
    }
  ]
}
